<?xml version="1.0" encoding="utf-8"?>
<!--    MỘT DÒNG CỦA ĐƠN THUỐC-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <TextView
        android:id="@+id/loai_thuoc_lv_item_stt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toTopOf="parent" />

    <TextView
        android:id="@+id/loai_thuoc_lv_item_ten_thuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên thuốc"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/loai_thuoc_lv_item_stt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/loai_thuoc_lv_item_so_luong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="65"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/loai_thuoc_lv_item_don_vi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/loai_thuoc_lv_item_don_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viên"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/loai_thuoc_lv_item_lieu_dung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày uống 3 lần, mỗi lần một viên, sau khi ăn"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loai_thuoc_lv_item_ten_thuoc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>